/* ========================================
   MachinaMind AI Agent - Dark Theme
   Modern Industrial Design
   60-30-10 Color Principle
   ======================================== */

/* ==================== Global ==================== */
*
QMainWindow {
    background-color: #2C3E50; /* Dominant 60% */
}

QMainWindow > QWidget {
    background-color: #2C3E50;
}

/* ==================== Buttons ==================== */
QPushButton {
    background-color: #007BFF;
    color: #FFFFFF;
    border: none;
    border-radius: 3px;
    padding: 4px;
    font-size: 10pt;
    font-weight: bold;
    min-height:30px;
    min-width: 90px;
}

QPushButton:hover {
    background-color: #0056B3;
}

QPushButton:pressed {
    background-color: #004085;
}

QPushButton:disabled {
    background-color: #DCE0E8;
    color: #6C757D;
}

/* Theme Toggle Button */
QPushButton[themeButton="true"] {
    background-color: #007BFF;
    color: #ECF0F1;
    border: 0px solid #2C3E50;
    border-radius: 20px;
    font-weight: bold;
    font-size: 16pt;
    min-width: 40px;
    max-width: 40px;
    min-height: 40px;
    max-height: 40px;
    padding: 0px;
}

QPushButton[themeButton="true"]:hover {
    background-color: #0056B3;
    color: #FFFFFF;
}

QPushButton[themeButton="true"]:pressed {
    background-color: #004085;
}

/* ==================== Input Fields ==================== */
QLineEdit {
    background-color: #34495E;
    color: #ECF0F1;
    border: 2px solid #34495E;
    border-radius: 3px;
    padding: 8px;
    selection-background-color: #007BFF;
}

QLineEdit:focus {
    border-color: #007BFF;
}

QLineEdit:disabled {
    background-color: #1C2833;
    color: #7F8C8D;
}
/* ==================== QTextEdit Specific ==================== */
QTextEdit {
    background-color: #34495E;
    color: #ECF0F1;
    border: 0px solid #34495E;
    border-radius: 3px;
    padding: 8px;
    selection-background-color: #007BFF;
}

QTextEdit:focus {
    border-color: #007BFF;
    background-color: #394D5E;
    border-radius: 3px;
}

QTextEdit:hover {
    border-color: #5DADE2;
}

QTextEdit:read-only {
    background-color: #34495E;
    border-radius: 3px;
}

QTextEdit:disabled {
    background-color: #34495E;
    color: #7F8C8D;
    border-radius: 3px;
}

/* ==================== ComboBox ==================== */
QComboBox {
    background-color: #34495E;
    color: #ECF0F1;
    border: 2px solid #2C3E50;
    border-radius: 3px;
    padding: 8px 15px;
    min-width: 150px;
    min-height: 20px;
    font-weight: 500;
}

QComboBox:hover {
    border-color: #007BFF;
    background-color: #394D5E;
}

QComboBox:focus {
    border-color: #007BFF;
    background-color: #394D5E;
}

QComboBox:disabled {
    background-color: #1C2833;
    color: #7F8C8D;
    border-color: #16202D;
}

QComboBox::drop-down {
    border: none;
    width: 35px;
    background-color: transparent;
}

QComboBox::drop-down:hover {
    background-color: #007BFF;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-top: 10px solid #ECF0F1;
    margin-right: 12px;
}

QComboBox::down-arrow:hover {
    border-top-color: #FFFFFF;
}

QComboBox QAbstractItemView {
    background-color: #34495E;
    color: #ECF0F1;
    selection-background-color: #007BFF;
    selection-color: #FFFFFF;
    border: 2px solid #007BFF;
    border-radius: 3px;
    padding: 5px;
    outline: none;
}

QComboBox QAbstractItemView::item {
    padding: 8px 15px;
    border-radius: 3px;
    margin: 1px;
}

QComboBox QAbstractItemView::item:hover {
    background-color: #2980B9;
    color: #FFFFFF;
}

QComboBox QAbstractItemView::item:selected {
    background-color: #007BFF;
    color: #FFFFFF;
}

/* ==================== Spin Box ==================== */
QSpinBox {
    background-color: #34495E;
    color: #ECF0F1;
    border: 2px solid #2C3E50;
    border-radius: 3px;
    padding: 6px;
}

QSpinBox:hover {
    border-color: #007BFF;
}

QSpinBox::up-button, QSpinBox::down-button {
    background-color: #2C3E50;
    border: none;
    width: 20px;
}

QSpinBox::up-button:hover, QSpinBox::down-button:hover {
    background-color: #007BFF;
}

/* ==================== Labels ==================== */
QLabel {
    color: #ECF0F1;
    background-color: transparent;
    font-size: 14pt;
    border-color: #111b2700;
}

/* ==================== Scroll Bar ==================== */
QScrollBar:vertical {
    background-color: rgba(255, 255, 255, 0);
    width: 14px;
    margin: 1px 0;
    border: 2px solid #007BFF;
    border-radius: 7px;
    padding: 2px;
}

QScrollBar::handle:vertical {
    background: #007BFF;
    min-height: 50px;
    border-radius: 3px;
}

QScrollBar::handle:vertical:hover {
    background-color: rgb(74, 162, 255)
}

QScrollBar::handle:vertical:pressed {
    background-color: #256691;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical,
QScrollBar::up-arrow:vertical,
QScrollBar::down-arrow:vertical,
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background-color: rgba(255, 255, 255, 0);
    border: none;
    width: 0px;
}

/* HORIZONTAL */
QScrollBar:horizontal {
    background-color: rgba(255, 255, 255, 0);
    height: 14px;
    margin: 0px 1px;
    border: 2px solid #007BFF;
    border-radius: 7px;
    padding: 2px;
}

QScrollBar::handle:horizontal {
    background: #007BFF;
    min-width: 50px;
    border-radius: 3px;
}

QScrollBar::handle:horizontal:hover {
    background-color: rgb(74, 162, 255)
}

QScrollBar::handle:horizontal:pressed {
    background-color: #256691;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal,
QScrollBar::up-arrow:horizontal,
QScrollBar::down-arrow:horizontal,
QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background-color: rgba(255, 255, 255, 0);
    border: none;
    width: 0px;
}


/* ==================== Table Widget ==================== */
QTableWidget {
    background-color: #2C3E50;
    alternate-background-color: #34495E;
    color: #ECF0F1;
    gridline-color: rgba(26, 37, 47, 0);
    border: 1px solid rgba(26, 37, 47, 0);
    border-radius: 3px;
}

QTableWidget::item {
    padding: 0px;
}

QTableWidget::item:selected {
    background-color: rgba(0, 123, 255, 0.747);
}
QHeaderView {
    background-color: #2C3E50;
    color: #ECF0F1;
    padding: 0px;
    border: 1px solid rgba(44, 62, 80, 0);
    font-weight: bold;
}
QHeaderView::section {
    background-color: #34495E;
    padding: 0px;
    border: 1px solid rgba(44, 62, 80, 0);
    font-weight: bold;
}

QHeaderView::section:hover {
    background-color: #007BFF;
}
QHeaderView::corner {
    background-color: #34495E;
    border: 1px solid rgba(44, 62, 80, 0);
}
QTableCornerButton::section {
    background-color: #34495E;
    border-top-right-radius: 2px;
    padding: 3px;
}

QTableCornerButton::section:hover {
    background-color: #34495E;
}

QTableCornerButton::section:pressed {
    background-color: #34495E;
}

/* ==================== List Widget ==================== */
QListWidget {
    background-color: #34495E;
    color: #ECF0F1;
    border: 0px solid #1A252F;
    border-radius: 3px;
}

QListWidget::item {
    padding: 2px;
    border-bottom: none;
    background-color: transparent;
}

QListWidget::item:selected {
    background-color: transparent;
    color: #ECF0F1;
}

QListWidget::item:hover {
    background-color: transparent;
}

/* ==================== Status Bar ==================== */
QStatusBar {
    background-color: #1A252F;
    color: #95A5A6;
    border-top: 1px solid #34495E;
}

QStatusBar::item {
    border: none;
}


/* ==================== Tool Tip ==================== */
QToolTip {
    background-color: #34495E;
    color: #ECF0F1;
    border: 1px solid #007BFF;
    padding: 5px;
    border-radius: 4px;
}

/* ==================== Charts (QtCharts) ==================== */
QChartView {
    background-color: #2C3E50;
    border: 1px solid #1A252F;
    border-radius: 3px;
}

/* ==================== Splitter ==================== */
QSplitter::handle {
    background-color: #34495E;
    border: 0px solid #2C3E50;
}

QSplitter::handle:horizontal {
    width: 3px;
    background-color: #34495E;
}

QSplitter::handle:vertical {
    height: 3px;
    background-color: #34495E;
}

QSplitter::handle:hover {
    background-color: #3498DB;
}

QSplitter::handle:horizontal:hover {
    background-color: #3498DB;
}

QSplitter::handle:pressed {
    background-color: #2980B9;
}


