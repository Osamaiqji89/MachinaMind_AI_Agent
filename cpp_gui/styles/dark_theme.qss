/* ========================================
   MachinaMind AI Agent - Dark Theme
   Modern Industrial Design
   60-30-10 Color Principle
   ======================================== */

/* ==================== Global ==================== */
* {
    font-family: "Roboto,  Segoe UI", Arial, sans-serif;
    font-size: 10pt;
}

QMainWindow {
    background-color: #2C3E50; /* Dominant 60% */
}

QMainWindow > QWidget {
    background-color: #2C3E50;
}

/* ==================== Tab Widget ==================== */
QTabWidget::pane {
    border: 1px solid #1A252F;
    background-color: #34495E; /* Sekund√§r 30% */
    border-radius: 4px;
}

QTabBar::tab {
    background-color: #2C3E50;
    color: #BDC3C7;
    padding: 10px 20px;
    border: 1px solid #1A252F;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #34495E;
    color: #ECF0F1;
    border-bottom: 3px solid #3498DB; /* Akzent 10% */
}

QTabBar::tab:hover {
    background-color: #394D5E;
    color: #ECF0F1;
}

/* ==================== Buttons ==================== */
QPushButton {
    background-color: #3498DB; /* Akzent */
    color: #FFFFFF;
    border: none;
    border-radius: 6px;
    padding: 10px 20px;
    font-weight: bold;
    min-width: 100px;
}

QPushButton:hover {
    background-color: #2980B9;
}

QPushButton:pressed {
    background-color: #21618C;
}

QPushButton:disabled {
    background-color: #5D6D7E;
    color: #95A5A6;
}

/* Theme Toggle Button */
QPushButton[themeButton="true"] {
    background-color: #34495E;
    color: #ECF0F1;
    border: 2px solid #2C3E50;
    border-radius: 6px;
    font-weight: bold;
    font-size: 16pt;
    min-width: 40px;
    max-width: 40px;
    min-height: 40px;
    max-height: 40px;
    padding: 0px;
}

QPushButton[themeButton="true"]:hover {
    background-color: #3498DB;
    color: #FFFFFF;
}

QPushButton[themeButton="true"]:pressed {
    background-color: #2980B9;
}

/* Spezielle Button-Typen */
QPushButton#sendButton {
    background-color: #27AE60; /* Erfolg */
}

QPushButton#sendButton:hover {
    background-color: #229954;
}

QPushButton#analyzeButton {
    background-color: #3498DB;
}

QPushButton#exportButton {
    background-color: #95A5A6;
}

QPushButton#exportButton:hover {
    background-color: #7F8C8D;
}

/* ==================== Input Fields ==================== */
QLineEdit, QPlainTextEdit {
    background-color: #34495E;
    color: #ECF0F1;
    border: 2px solid #34495E;
    border-radius: 4px;
    padding: 8px;
    selection-background-color: #3498DB;
}

QLineEdit:focus, QPlainTextEdit:focus {
    border-color: #3498DB;
}

QLineEdit:disabled {
    background-color: #1C2833;
    color: #7F8C8D;
}

/* ==================== QTextEdit Specific ==================== */
QTextEdit {
    background-color: #34495E;
    color: #ECF0F1;
    border: 2px solid #34495E;
    border-radius: 4px;
    padding: 8px;
    selection-background-color: #3498DB;
}

QTextEdit:focus {
    border-color: #3498DB;
    background-color: #394D5E;
}

QTextEdit:hover {
    border-color: #5DADE2;
}

QTextEdit:read-only {
    background-color: #2C3E50;
}

QTextEdit:disabled {
    background-color: #1C2833;
    color: #7F8C8D;
}

/* ==================== ComboBox ==================== */
QComboBox {
    background-color: #34495E;
    color: #ECF0F1;
    border: 2px solid #2C3E50;
    border-radius: 6px;
    padding: 8px 15px;
    min-width: 150px;
    font-weight: 500;
}

QComboBox:hover {
    border-color: #3498DB;
    background-color: #394D5E;
}

QComboBox:focus {
    border-color: #3498DB;
    background-color: #394D5E;
}

QComboBox:disabled {
    background-color: #1C2833;
    color: #7F8C8D;
    border-color: #16202D;
}

QComboBox::drop-down {
    border: none;
    width: 35px;
    background-color: transparent;
}

QComboBox::drop-down:hover {
    background-color: #3498DB;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-top: 10px solid #ECF0F1;
    margin-right: 12px;
}

QComboBox::down-arrow:hover {
    border-top-color: #FFFFFF;
}

QComboBox QAbstractItemView {
    background-color: #34495E;
    color: #ECF0F1;
    selection-background-color: #3498DB;
    selection-color: #FFFFFF;
    border: 2px solid #3498DB;
    border-radius: 6px;
    padding: 5px;
    outline: none;
}

QComboBox QAbstractItemView::item {
    padding: 8px 15px;
    border-radius: 4px;
    margin: 1px;
}

QComboBox QAbstractItemView::item:hover {
    background-color: #2980B9;
    color: #FFFFFF;
}

QComboBox QAbstractItemView::item:selected {
    background-color: #3498DB;
    color: #FFFFFF;
}

/* ==================== Spin Box ==================== */
QSpinBox {
    background-color: #34495E;
    color: #ECF0F1;
    border: 2px solid #2C3E50;
    border-radius: 4px;
    padding: 6px;
}

QSpinBox:hover {
    border-color: #3498DB;
}

QSpinBox::up-button, QSpinBox::down-button {
    background-color: #2C3E50;
    border: none;
    width: 20px;
}

QSpinBox::up-button:hover, QSpinBox::down-button:hover {
    background-color: #3498DB;
}

/* ==================== Labels ==================== */
QLabel {
    color: #ECF0F1;
    background-color: transparent;
    font-size: 14pt;
    border-color: #111b2700;
}

QLabel#titleLabel {
    font-size: 14pt;
    font-weight: bold;
    color: #3498DB;
}

QLabel#statusLabel {
    font-size: 9pt;
    color: #95A5A6;
}

QLabel#errorLabel {
    color: #E74C3C;
    font-weight: bold;
}

QLabel#successLabel {
    color: #27AE60;
    font-weight: bold;
}


/* ==================== Scroll Bar ==================== */
QScrollBar:vertical {
    background-color: rgba(255, 255, 255, 0);
    width: 20px;
    margin: 1px 0;
    border: 2px solid #3498DB;
    border-radius: 5px;
    padding: 2px;
}

QScrollBar::handle:vertical {
    background: #3498DB;
    min-height: 50px;
    border-radius: 3px;
}

QScrollBar::handle:vertical:hover {
    background-color: #2d83bd;
}

QScrollBar::handle:vertical:pressed {
    background-color: #256691;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical,
QScrollBar::up-arrow:vertical,
QScrollBar::down-arrow:vertical,
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background-color: rgba(255, 255, 255, 0);
    border: none;
    width: 0px;
}

/* HORIZONTAL */
QScrollBar:horizontal {
    background-color: rgba(255, 255, 255, 0);
    height: 20px;
    margin: 0px 1px;
    border: 2px solid #3498DB;
    border-radius: 5px;
    padding: 2px;
}

QScrollBar::handle:horizontal {
    background: #3498DB;
    min-width: 50px;
    border-radius: 3px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #2d83bd;
}

QScrollBar::handle:horizontal:pressed {
    background-color: #256691;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal,
QScrollBar::up-arrow:horizontal,
QScrollBar::down-arrow:horizontal,
QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background-color: rgba(255, 255, 255, 0);
    border: none;
    width: 0px;
}


/* ==================== Table Widget ==================== */
QTableWidget {
    background-color: #2C3E50;
    alternate-background-color: #34495E;
    color: #ECF0F1;
    gridline-color: #1A252F;
    border: 1px solid #1A252F;
    border-radius: 4px;
}

QTableWidget::item {
    padding: 8px;
}

QTableWidget::item:selected {
    background-color: #3498DB;
    color: #FFFFFF;
}

QHeaderView::section {
    background-color: #34495E;
    color: #ECF0F1;
    padding: 8px;
    border: 1px solid #2C3E50;
    font-weight: bold;
}

QHeaderView::section:hover {
    background-color: #3498DB;
}
QHeaderView::corner {
    background-color: #34495E;
    border: 1px solid #2C3E50;
}
QTableCornerButton::section {
    background-color: #34495E;
    border-top-right-radius: 2px;
    padding: 4px;
}

QTableCornerButton::section:hover {
    background-color: #e7e7e7;
}

QTableCornerButton::section:pressed {
    background-color: #dcdcdc;
}

/* ==================== List Widget ==================== */
QListWidget {
    background-color: #2C3E50;
    color: #ECF0F1;
    border: 1px solid #1A252F;
    border-radius: 4px;
}

QListWidget::item {
    padding: 10px;
    border-bottom: 1px solid #1A252F;
}

QListWidget::item:selected {
    background-color: #3498DB;
    color: #FFFFFF;
}

QListWidget::item:hover {
    background-color: #34495E;
}

/* ==================== Progress Bar ==================== */
QProgressBar {
    background-color: #2C3E50;
    border: 2px solid #34495E;
    border-radius: 6px;
    text-align: center;
    color: #ECF0F1;
    height: 24px;
}

QProgressBar::chunk {
    background-color: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                      stop:0 #3498DB, stop:1 #2980B9);
    border-radius: 4px;
}

/* ==================== Status Bar ==================== */
QStatusBar {
    background-color: #1A252F;
    color: #95A5A6;
    border-top: 1px solid #34495E;
}

QStatusBar::item {
    border: none;
}

/* ==================== Menu Bar ==================== */
QMenuBar {
    background-color: #2C3E50;
    color: #ECF0F1;
    border-bottom: 1px solid #1A252F;
}

QMenuBar::item:selected {
    background-color: #3498DB;
}

QMenu {
    background-color: #34495E;
    color: #ECF0F1;
    border: 1px solid #2C3E50;
}

QMenu::item:selected {
    background-color: #3498DB;
}

/* ==================== Tool Tip ==================== */
QToolTip {
    background-color: #34495E;
    color: #ECF0F1;
    border: 1px solid #3498DB;
    padding: 5px;
    border-radius: 4px;
}

/* ==================== Charts (QtCharts) ==================== */
QChartView {
    background-color: #2C3E50;
    border: 1px solid #1A252F;
    border-radius: 4px;
}

/* ==================== Custom Widget Classes ==================== */
.chatMessage {
    background-color: #34495E;
    border-radius: 8px;
    padding: 10px;
    margin: 5px 0;
}

.userMessage {
    background-color: #2C3E50;
    border-left: 4px solid #3498DB;
}

.assistantMessage {
    background-color: #34495E;
    border-left: 4px solid #27AE60;
}

.errorMessage {
    background-color: #34495E;
    border-left: 4px solid #E74C3C;
}

/* ==================== Card Style Containers ==================== */
.card {
    background-color: #34495E;
    border-radius: 8px;
    padding: 15px;
    border: 1px solid #2C3E50;
}

.card:hover {
    border-color: #3498DB;
}

/* ==================== Badge/Tag Style ==================== */
.badge {
    background-color: #3498DB;
    color: #FFFFFF;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 9pt;
}

.badge-success {
    background-color: #27AE60;
}

.badge-warning {
    background-color: #F39C12;
}

.badge-error {
    background-color: #E74C3C;
}

/* ==================== Splitter ==================== */
QSplitter::handle {
    background-color: #1A252F;
    border: 1px solid #2C3E50;
}

QSplitter::handle:horizontal {
    width: 4px;
    background-color: #1A252F;
}

QSplitter::handle:vertical {
    height: 4px;
    background-color: #1A252F;
}

QSplitter::handle:hover {
    background-color: #3498DB;
}


