# API Keys - NICHT BENÖTIGT für Ollama
OPENAI_API_KEY=
HUGGINGFACE_API_KEY=
ANTHROPIC_API_KEY=

# Database
DATABASE_URL=sqlite:///MachinaData.db

# LLM Configuration - OLLAMA (lokal, kostenlos)
LLM_PROVIDER=ollama
LLM_MODEL=llama3.2
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_USE_FEW_SHOT=true
OLLAMA_BASE_URL=http://localhost:11434

# RAG Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_STORE_TYPE=faiss
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
API_KEY_REQUIRED=false